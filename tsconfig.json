{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext", 
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
  ]
}
